{
	"env": {
		"browser": true,
		"es2020": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:prettier/recommended"],
	"parserOptions": {
		"ecmaVersion": 11
	},
	"ignorePatterns": ["/public/css", "/public/scripts"],
	"rules": {
		"linebreak-style": ["error", "unix"],
		"prettier/prettier": "error"
	}
}
