		"start": "node ./bin/www",
		"restart": "nodemon ./bin/www",
		"lint": "eslint --ignore-path .gitignore .",
		"format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md|vue)\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Omar-Handouk/DevConnect-Revisited.git"
	},
	"author": "Omar-Handouk",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Omar-Handouk/DevConnect-Revisited/issues"
	},
	"homepage": "https://github.com/Omar-Handouk/DevConnect-Revisited#readme",
	"devDependencies": {
		"@types/config": "0.0.36",
		"@types/express": "^4.17.6",
		"@types/node": "^14.0.14",
		"@typescript-eslint/eslint-plugin": "^3.5.0",
		"@typescript-eslint/parser": "^3.5.0",
		"eslint": "^7.3.1",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"nodemon": "^2.0.4",
		"prettier": "^2.0.5"
	},
	"dependencies": {
		"config": "^3.3.1",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"helmet": "^3.23.3",
		"morgan": "^1.10.0"
	},
	"nodemonConfig": {
		"verbose": true,
		"ignore": []
